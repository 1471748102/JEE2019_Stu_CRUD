<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="hzw" extends="struts-default">
    <action name="Login" class="control.LoginAction">
        <result name="success">/HelloLogin.jsp</result>
        <result name="error">/ErrorLogin.jsp</result>
    </action>

        <action name="add" class="control.AddStu">
            <result name="success">/AddStuSuc.jsp</result>
            <result name="error">/AddStuErr.jsp</result>
        </action>

        <action name="User" class="control.AddStuByUser">
            <result name="success">/AddStuByUserSuc.jsp</result>
            <result name="error">/AddStuByUserErr.jsp</result>
        </action>

        <action name="show" class="control.ShowAllStudent">
            <result name="success">/ShowAllSuc.jsp</result>
            <result name="error">/ShowAllErr.jsp</result>
        </action>
    </package>
</struts>